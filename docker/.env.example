# VaultStadio Docker Environment Variables
# Copy this file to .env and customize for your environment

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=vaultstadio
POSTGRES_PASSWORD=vaultstadio
POSTGRES_DB=vaultstadio
POSTGRES_PORT=5432

# =============================================================================
# Backend Configuration
# =============================================================================
BACKEND_PORT=8080

# Database connection (used by backend)
DATABASE_URL=jdbc:postgresql://postgres:5432/vaultstadio
DATABASE_USER=vaultstadio
DATABASE_PASSWORD=vaultstadio

# Storage paths
VAULTSTADIO_STORAGE_PATH=/data/storage
VAULTSTADIO_DATA_PATH=/data/plugins

# Security (CHANGE IN PRODUCTION!)
VAULTSTADIO_JWT_SECRET=change-me-in-production-use-32-chars

# JVM Options
JAVA_OPTS=-Xms256m -Xmx1024m

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=80

# =============================================================================
# MinIO (Optional - S3 compatible storage)
# =============================================================================
# Enable with: docker-compose --profile s3 up
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# =============================================================================
# Host Storage Path (Optional)
# =============================================================================
# Map a host directory for persistent storage
# HOST_STORAGE_PATH=/path/to/your/storage
